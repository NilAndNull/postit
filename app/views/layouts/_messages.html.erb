<% flash.each do |message_type, message| %>
  <div class="flash-message alert alert-<%="#{message_type}"%> alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= message %>
  </div>
<% end %>

