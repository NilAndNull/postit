<%= render 'shared/content_title', title: "Profile: #{@user.username}" %>

<div class="row">
  <div class="col-md-12">
    <div class="well">
      <dl class="dl-horizontal">
        <dt>Username:</dt>
        <dd><%= @user.username %></dd>
      </dl>
    </div>
  </div>
</div>

<h4>Activity:</h4>

<%= bs_tabs do |t| %>
  <%= t.bs_tab_for "Posts (#{@posts.count})", active_tab == 'Post' ? true : false do %>
    <%= render @posts %>
  <% end %>
  <%= t.bs_tab_for "Comments (#{@comments.count})", active_tab == 'Comment' ? true : false do %>
    <%= render @comments %>
  <% end %>
<% end %>
