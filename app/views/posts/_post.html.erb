<div class="row">
  <div class="col-md-6">
    <div class="well">
      <!-- Post categories -->
      <%= render post.categories %>
      
      <!-- Post title -->
      <h4><%= link_to post.title, post.url, target: '_blank' %></h4>
      
      <!-- Post description -->
      <p><%= post.description %></p>
      
      <!-- Post who and when -->
      <p>
      <span class="quiet">posted by </span>
      <%= post.creator.present? ? post.creator.username : "Anonymous" %>
      <small> at <%= I18n.l post.created_at, format: :long %></small>
      </p>
      
      <!-- Post comments -->
      <span>
      <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </span>
    </div>
  </div>
</div>