<div class="row">
  <div class="col-md-2">
    <div class="well text-center">
      <div class="row">
        <div class="col-md-12">
          <%= link_to vote_post_path(post, value: true), method: :post do %>
            <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
          <% end %>
        </div>
        <div class="col-md-12">
          <strong><%= post.total_votes %></strong>
        </div>
        <div class="col-md-12">
          <%= link_to vote_post_path(post, value: false), method: :post do %>
            <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="well">
      <!-- Post categories -->
      <%= render post.categories %>
      
      <!-- Post title -->
      <h4><%= link_to post.title, post.url, target: '_blank' %></h4>
      
      <!-- Post description -->
      <p><%= post.description %></p>
      
      <!-- Post who and when -->
      <p>
      <span class="quiet">posted by </span>

        <% if post.creator.present? %>
          <%= link_to post.creator.username, user_path(post.creator) %>
        <% else %>
          <%= "Anonymous" %>
        <% end %>

      <small> at <%= I18n.l post.created_at, format: :long %></small>
      </p>
      
      <!-- Post comments -->
      <span>
      <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </span>
    </div>
  </div>
</div>