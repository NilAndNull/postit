<div class="row">
  <div class="col-md-2">
    <div class="well text-center">
      <div class="row">
        <div class="col-md-12">
          <%= link_to vote_comment_path(comment, value: true), method: :post do %>
            <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
          <% end %>
        </div>
        <div class="col-md-12">
          <strong><%= comment.total_votes %></strong>
        </div>
        <div class="col-md-12">
          <%= link_to vote_comment_path(comment, value: false), method: :post do %>
            <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="well">
      <p><%= comment.body %></p>
      
      <p>
        <span class="quiet">posted by </span>
          <% if comment.creator.present? %>
            <%= link_to comment.creator.username, user_path(comment.creator) %>
          <% else %>
            <%= "Anonymous" %>
          <% end %>
        <small> at <%= I18n.l comment.created_at, format: :long %></small>
      </p>
    </div>
  </div>
</div>
