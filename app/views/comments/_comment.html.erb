<div class="row">
  <div class="col-md-6">
    <div class="well">
      <p><%= comment.body %></p>
      
      <p>
        <span class="quiet">posted by </span>
        <%= comment.creator.present? ? comment.creator.username : "Anonymous" %>
        <small> at <%= I18n.l comment.created_at, format: :long %></small>
      </p>
    </div>
  </div>
</div>
